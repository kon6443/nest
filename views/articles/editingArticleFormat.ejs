<!DOCTYPE html>
    <html>
        <head>
            <title>nest-project</title>
            <link rel="stylesheet" href="../../public/css/styles.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        </head>
    <body>
        <div class="top-menu">
            <a href="/">Home</a>
            <a href="/articles">Forum</a>
            <a href="/chat">Chat</a>
            <a href="/user">My page</a>
        </div>
        <h1>Welcome!</h1>

        <section class="content-section">
            <div class="item-container">
                <div class="field-title">
                    <label for="title"> <h3>Title: </h3></label> <br>
                    <input type="text" id="title" name="title" value="<%= article.title %>" placeholder="Enter a title here." style="width: 80%;"/> <br><br>
                </div>
                <div class="field-content">
                    <label for="content"> <h3>Contents: </h3></label> <br>
                    <textarea id="content" rows="10%" cols="100%" /> <%= article.content %> </textarea>
                </div>
                <div class="field-button">
                    <button type="button" id="back" onclick="history.back()">Back</button>
                    <button type="button" id="post" onclick="putArticle('<%= article.article_id %>')" >Save</button> <br><br>
                </div>
            </div>
        </section>
    <script src="../../public/javascript/script.js"></script>
    </body>
</html>

